<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> <% t('hello') %>
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
    <% if current_user.likes?(micropost) %>
      <%= form_for(current_user.likes_relationships.find_by(likes_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= f.submit "Unlike" %>
      <% end %>
    <% else %>
      <%= form_for(current_user.likes_relationships.build, html: { method: :post}) do |f| %>
      <div><%= hidden_field_tag :micropost_id, micropost.id %></div>
      <%= f.submit "like" %>
      <% end %>
    <% end %>
  
</li>
